#include <iostream>
using namespace std;
// Fibonnaci Series
class Fibonnaci{
private:
    int n, t1 = 0, t2 = 1, nextTerm = 0;
public:
    void series() {
        cout << "Enter a positive number: ";
        cin >> n;

        // displays the first two terms which is always 0 and 1
        cout << "Fibonacci Series: " << t1 << ", " << t2 << ", ";

        nextTerm = t1 + t2;

        while(nextTerm <= n) {
            cout << nextTerm << ", ";
            t1 = t2;
            t2 = nextTerm;
            nextTerm = t1 + t2;
        }
    }
};
int main(){
    Fibonnaci f;
    f.series();
}




