#include <iostream>
using namespace std;

class Pen{
private:
    string companyName;
    string color;
    int price;
    float height;
public:
    // Setting Variables Values
    void setName(string company) {
        companyName = company;
    }
    void setColor(string c) {
        color = c;
    }
    void setPrice(int p) {
        price = p;
    }
    void setHeight(float h) {
        height = h;
    }

    // Getting Variables Values
    string getName() {
        return companyName;
    }
    string getColor() {
        return color;
    }
    int getPrice() {
        return price;
    }
    float getHeight() {
        return height;
    }
    //void display() {
    //    cout << "Company Name: " << companyName << endl;
    //    cout << "Color: " << color << endl;
    //    cout << "Price: " << price << endl;
    //    cout << "Height: " << height << endl;
    //}
};
int main()
{
    int num;
    cout << "How many Pen data you want to Enter:";
    cin >> num;
    Pen* pens = new Pen[num];
    string name;
    string color;
    int price;
    float height;
    for (int i = 0; i < num; i++) {
        cout << "Enter Details for Pen " << (i + 1) << ":" << endl;
        cout << "Company Name: ";
        cin >> name ;
        pens[i].setName(name);
        cout << "Color: ";
        cin >> color;
        pens[i].setColor(color);
        cout << "Price: ";
        cin >> price;
        pens[i].setPrice(price);
        cout << "Height: ";
        cin >> height;
        pens[i].setHeight(height);
        cout << endl;
    }
    cout << " \n \n \n \n \n \n \n \n \n";
    cout << "--------------------" << endl;
    for (int i = 0; i < num; i++) {
        cout << "Details for Pen " << (i + 1) << ":" << endl;
        cout << "Company Name: " << pens[i].getName() << endl;
        cout << "Color: " << pens[i].getColor() << endl;
        cout << "Price: " << pens[i].getPrice() << endl;
        cout << "Height: " << pens[i].getHeight() <<endl;
        cout << "--------------------" << endl;
    }
    delete[] pens;
    return 0;
}

